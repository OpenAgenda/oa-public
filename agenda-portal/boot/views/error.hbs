{{>layout.top}}
{{>head tagName="h1" link=root}}
<div class="container pt-5">
  <div class="row">
    <div class="offset-md-2 col-md-8 text-center py-5">
      <h2>Il y a eu un souci avec le serveur!</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      {{#if message}}
      <pre><code>{{message}}</code></pre>
      {{else}}
      <p class="text-center">Rechargez le site dans quelques instants</p>
      {{/if}}
    </div>
  </div>
</div>
{{>layout.bottom}}

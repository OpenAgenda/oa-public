<div class="sidebar">
  <div class="mobile-top-nav text-center" data-sidebar-toggle>
    <button class="btn btn-link">Retour à la liste</button>
  </div>
  <div class="sidebar-wrapper">
    <div class="my-4">
      {{filter
        type='map'
        name='geo'
        className='map-container'
        searchMessage='rechercher quand je déplace la carte'
        searchWithMap=true
      }}
    </div>

    <div class="my-4">
      <!-- id is required because both filters has the same name -->
      {{filter id='timings' type='dateRange' name='timings'}}
      {{filter id='defined-range' type='definedRange' name='timings' staticRanges=(array 'today' 'tomorrow')}}
    </div>

    <div class="my-4">
      <b>Type de musée</b>
      {{filter type='choice' fieldName='type-de-musee'}}
    </div>

    <div class="my-4">
      <b>Passé / En cours / À venir</b>
      {{filter type='choice' name='relative'}}

      <b>Mode de participation</b>
      {{filter type='choice' name='attendanceMode' inputType='radio'}}

      <b>Filtres customs</b>

      {{#customFilter
        query=(object relative=(array 'current' 'upcoming') attendanceMode='1')
        activeClass='active'
        inactiveClass='inactive'
        className='custom-example checkbox'
      }}
        <label for="nothing">
          <input type="checkbox" tabindex="-1" readonly checked />
          <input type="checkbox" tabindex="-1" readonly />
          En cours + à venir + hors ligne
        </label>
      {{/customFilter}}

      {{#customFilter
        query=(object timings=(object gte='2021-06-23T22:00:00.000Z' lte='2021-06-24T21:59:59.999Z'))
        handlerSelector='.checkbox'
        activeClass='active'
        inactiveClass='inactive'
        className='custom-example checkbox'
      }}
        <label for="nothing">
          <input type="checkbox" tabindex="-1" readonly checked />
          <input type="checkbox" tabindex="-1" readonly />
          Jeudi 24 juin
        </label>
      {{/customFilter}}
    </div>

    <span class="js_total mobile-bottom-nav" data-sidebar-toggle data-total="{{total}}" data-label-none="Aucun événement ne correspond à cette recherche" data-label-one="1 événement" data-label-plural="%total% événements"></span>
  </div>
</div>

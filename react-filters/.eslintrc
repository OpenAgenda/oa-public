{
  "extends": [
    "@openagenda"
  ],

  "parserOptions": {
    "sourceType": "script"
  },

  "ignorePatterns": [
    "lib",
    "esm",
    "dist"
  ],

  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          ".storybook/**/*.js",
          "stories/**/*.js",
          "example/**/*.js",
          "webpack.config.js"
        ]
      }
    ]
  },

  "overrides": [
    {
      "files": [
        "src/**/*.js",
        "test/**/*.js",
        ".storybook/**/*.js",
        "stories/**/*.js"
      ],

      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}

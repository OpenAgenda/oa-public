<% include ../layout/_top.ejs %>
<div class="container agenda-admin">
  <% include ../agenda-admin/_admin-header.ejs %>
  <div class="row wsq">
    <% include ../agenda-admin/_admin-tabs.ejs %>
    <div class="col col-sm-9 body">
      <div class="tc-edge">
        <div class="input-group">
          <button class="btn btn-success">
            <span>Synchronisé</span>
            <i class="fa fa-check"></i>
          </button>
        </div>
      </div>
      <div class="tc-editor">
        <div class="tc-title">
          <h2>Tags</h2>
          <p>Les tags forment une ou plusieurs listes à choix</p>
        </div>
        <ul class="list-unstyled">
          <li class="list-item tc-group">
            <div class="form-group">
              <label>Nom du groupe</label>
              <input placeholder="" name="group-name" value="" type="text" class="form-control">
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox">
                <span>Rendre obligatoire.</span>
                <span class="info">Au moins un tag doit être sélectionné.</span>
              </label>
            </div>
            <div class="form-group">
              <label>Texte indicatif</label>
              <input placeholder="Laissez vide pour garder le texte par défaut" name="group-name" value="" type="text" class="form-control">
            </div>
            <label>Tags du groupe</label>
            <ul class="tc-list list-unstyled">
              <li class="tc-item">
                <div class="tc-actions">
                  <i class="fa fa-edit"></i>
                  <i class="fa fa-trash"></i>
                  <i class="fa fa-angle-up disabled"></i>
                  <i class="fa fa-angle-down"></i>
                </div>
                <span>concert</span>
              </li>
              <li class="tc-item">
                <div class="tc-actions">
                  <i class="fa fa-edit"></i>
                  <i class="fa fa-trash"></i>
                  <i class="fa fa-angle-up"></i>
                  <i class="fa fa-angle-down"></i>
                </div>
                <span>exposition</span>
              </li>
              <li class="tc-item">
                <div class="tc-actions">
                  <i class="fa fa-edit"></i>
                  <i class="fa fa-trash"></i>
                  <i class="fa fa-angle-up"></i>
                  <i class="fa fa-angle-down disabled"></i>
                </div>
                <span>théâtre</span>
              </li>
            </ul>

            <label>Ajouter un tag</label>
            <div class="form-inline add">
              <div class="form-group">
                <input type="text" name="add-tag" class="form-control" value="">
              </div>
              <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
            <div class="tc-remove">
              <a class="tc-remove-link">Supprimer le groupe</a>
            </div>
          </li>
        </ul>
        <div class="menu-bottom">
          <button type="submit" class="btn btn-primary">Ajouter un groupe de tags</button>
        </div>
      </div>
      <div class="tc-edge">
        <div class="input-group">
          <button class="btn btn-success">
            <span>Synchronisé</span>
            <i class="fa fa-check"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../layout/_bottom.ejs %>